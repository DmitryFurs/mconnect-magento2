<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="malibucommerce_mconnect" translate="label" sortOrder="500" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>M-Connect</label>
            <tab>service</tab>
            <resource>MalibuCommerce_MConnect::config</resource>

            <group id="info" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Information</label>
                <field id="version" sortOrder="10" type="label" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>M-Connect Version</label>
                    <frontend_model>\MalibuCommerce\MConnect\Block\Adminhtml\System\Config\Version\Module</frontend_model>
                </field>
            </group>

            <group id="general" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>General</label>
                <field id="enabled" sortOrder="10" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Enabled</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

            <group id="nav_connection" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>NAV Connection</label>
                <field id="log" sortOrder="10" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Log Requests</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[May consume a large amount of disk space.]]></comment>
                </field>
                <field id="allow_insecure_connection" sortOrder="20" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Allow Insecure Connection</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Allows MConnect SOAP API client to connect to NAV server w/o SSL/TLS certificate verification]]></comment>
                </field>
                <field id="connection_timeout" sortOrder="30" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Connection Timeout</label>
                    <comment><![CDATA[Connection Timeout to NAV server in seconds. If set to 0, default value will be used: 10 seconds]]></comment>
                </field>
                <field id="ntlm" sortOrder="35" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Use NTLM Authentication</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="url" sortOrder="40" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>NAV SOAP API URL</label>
                </field>
                <field id="username" sortOrder="50" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Username</label>
                </field>
                <field id="password" sortOrder="60" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Password</label>
                </field>
                <field id="test_connection" translate="label comment" type="button" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>\MalibuCommerce\MConnect\Block\Adminhtml\System\Config\Connection\Test</frontend_model>
                    <label />
                    <comment><![CDATA[Save credentials before testing!]]></comment>
                </field>
                <field id="trigger_password" sortOrder="80" type="password" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Trigger Password</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment><![CDATA[Password used when clicking links in NAV to trigger syncs]]></comment>
                </field>
                <field id="reveal_trigger_password" translate="label comment" type="button" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>\MalibuCommerce\MConnect\Block\Adminhtml\System\Config\Connection\TriggerPassword</frontend_model>
                    <label />
                </field>
            </group>

            <group id="queue" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Synchronization Queue</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Schedule (cron syntax)</label>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                </field>
                <field id="delete_after" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Remove from queue after (days)</label>
                    <comment>Number of days to keep historical queue data.  Leave empty to disable.</comment>
                </field>
                <field id="error_after" sortOrder="30" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Mark as errored after (minutes)</label>
                    <comment>Number of minutes after which a running process will be marked as errored.</comment>
                </field>
            </group>

            <group id="customer" type="text" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Customer</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Schedule (cron syntax)</label>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                </field>
                <field id="max_rows" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Entity Limit Per Request</label>
                </field>
                <field id="default_nav_id" sortOrder="25" type="text" showInDefault="1" showInWebsite="1" showInStore="1" translate="label">
                    <label>Default NAV ID For New Customers</label>
                    <comment><![CDATA[Leave blank to disable]]></comment>
                </field>
                <field id="default_group_taxable" sortOrder="30" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default group for new customers (taxable)</label>
                    <source_model>\Magento\Customer\Model\Config\Source\Group</source_model>
                </field>
                <field id="default_group_nontaxable" sortOrder="40" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default group for new customers (non-taxable)</label>
                    <source_model>\Magento\Customer\Model\Config\Source\Group</source_model>
                </field>
                <field id="default_website" sortOrder="50" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default website for new customers</label>
                    <source_model>\Magento\Config\Model\Config\Source\Website</source_model>
                </field>
                <field id="new_email_enabled" sortOrder="60" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Send password reset email to new customers</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="new_email_identity" sortOrder="70" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Password reset email sender</label>
                    <source_model>\Magento\Config\Model\Config\Source\Email\Identity</source_model>
                </field>
                <field id="new_email_template" sortOrder="80" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Password reset email template</label>
                    <!--<source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>-->
                </field>
            </group>

            <group id="product" type="text" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Product</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Schedule (cron syntax)</label>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                </field>
                <field id="max_rows" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Entity Limit Per Request</label>
                </field>
                <field id="import_attribute_set" sortOrder="30" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default attribute set for new products</label>
                    <source_model>\MalibuCommerce\MConnect\Model\Adminhtml\System\Config\Product\Attribute\Set</source_model>
                </field>
                <field id="import_type" sortOrder="40" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default type for new products</label>
                    <source_model>\MalibuCommerce\MConnect\Model\Adminhtml\System\Config\Product\Type</source_model>
                </field>
                <field id="import_visibility" sortOrder="50" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default visibility for new products</label>
                    <source_model>\MalibuCommerce\MConnect\Model\Adminhtml\System\Config\Product\Visibility</source_model>
                </field>
                <field id="import_tax_class" sortOrder="60" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default tax class for new products</label>
                    <source_model>\Magento\Tax\Model\TaxClass\Source\Product</source_model>
                    <backend_model>\Magento\Tax\Model\Config\TaxClass</backend_model>
                </field>
            </group>

            <group id="inventory" type="text" sortOrder="70" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Inventory</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Schedule (cron syntax)</label>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                </field>
                <field id="max_rows" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Entity Limit Per Request</label>
                </field>
            </group>

            <group id="order" type="text" sortOrder="75" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Order</label>
                <field id="hold_new_orders_export" sortOrder="10" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Hold New Orders Export</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="hold_new_orders_delay" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>New Orders Sync Delay</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <comment><![CDATA[In minutes]]></comment>
                    <depends>
                        <field id="hold_new_orders_export">1</field>
                    </depends>
                </field>
                <field id="order_status_when_synced_to_nav" sortOrder="30" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Order Status When Synced to NAV</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Newprocessing</source_model>
                    <depends>
                        <field id="hold_new_orders_export">1</field>
                    </depends>
                </field>
            </group>

            <group id="invoice" type="text" sortOrder="80" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Invoice</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Schedule (cron syntax)</label>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                </field>
                <field id="max_rows" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Entity Limit Per Request</label>
                </field>
                <field id="capture_type" sortOrder="30" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Default invoice capture type</label>
                    <source_model>\MalibuCommerce\MConnect\Model\Adminhtml\System\Config\Sales\Invoice\Capture\Type</source_model>
                </field>
                <field id="send_email_enabled" sortOrder="40" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Send invoice email to customers</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

            <group id="shipment" type="text" sortOrder="90" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Shipment</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Schedule (cron syntax)</label>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                </field>
                <field id="max_rows" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Entity Limit Per Request</label>
                </field>
                <field id="send_email_enabled" sortOrder="30" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Send Shipment Email To Customers</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="create_invoice_with_shipment" sortOrder="40" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Create Invoice When Shipment Is Created</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Refer to "Invoice" configuration section on this page for invoicing settings.]]></comment>
                </field>
                <field id="cancel_remaining_not_shipped_items" sortOrder="50" type="select" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Cancel Remaining Order Items For Partial Shipments</label>
                    <source_model>\Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[If set to "Yes" then for any partial shipment remaining not shipped order items will be canceled and order status will changed to Complete.]]></comment>
                </field>
            </group>

            <group id="price_rule" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                <label>Price Rule</label>
                <field id="cron_expr" sortOrder="10" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Schedule (cron syntax)</label>
                    <comment><![CDATA[<a href="http://crontab.guru/" target="_blank">Need help?</a>]]></comment>
                    <backend_model>\MalibuCommerce\MConnect\Model\Config\Backend\Cron</backend_model>
                </field>
                <field id="max_rows" sortOrder="20" type="text" showInDefault="1" showInWebsite="0" showInStore="0" translate="label">
                    <label>Import Entity Limit Per Request</label>
                </field>
            </group>
        </section>
    </system>
</config>